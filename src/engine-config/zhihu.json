{
  "id": "zhihu",
  "name": "知乎",
  "baseUrl": "https://www.zhihu.com",
  "searchPath": "/search?type=content&q=",
  "selectors": {
    "resultContainer": ".Card.SearchResult-Card",
    "title": ".ContentItem-title a",
    "link": ".ContentItem-title a",
    "snippet": ".RichText.ztext.CopyrightRichText-richText, .RichText, .RichContent-inner"
  },
  "headers": {
    "Accept-Language": "zh-CN,zh;q=0.9,en;q=0.8"
  },
  "antiBot": {
    "enabled": true,
    "detectors": [
      ".SignFlow",
      ".Login-content",
      "[placeholder=\"手机号\"]",
      "[placeholder*=\"短信验证码\"]",
      "[name=\"digits\"]",
      ".SignFlow-smsInputContainer",
      "*:has-text(\"验证码登录\")",
      "*:has-text(\"获取短信验证码\")",
      "*:has-text(\"获取语音验证码\")"
    ],
    "errorMessage": "知乎需要验证码登录，请手动完成验证后重试。"
  },
  "customDelay": {
    "min": 2000,
    "max": 5000
  },
  "fallbackSelector": "div:has(a[href*=\"/question/\"], a[href*=\"/answer/\"], a[href*=\"/zvideo/\"])",
  "linkValidation": [
    "/question/",
    "/answer/",
    "/zvideo/",
    "/p/",
    "/column/",
    "zhihu.com",
    "http"
  ]
}
