{
  "name": "playwright-search",
  "version": "1.0.0",
  "description": "基于 Playwright 的搜索引擎 MCP 工具",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "playwright-search": "./bin/playwright-search.js",
    "playwright-search-mcp": "./bin/playwright-search-mcp.js"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "playwright install chromium",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "ts-node src/index.ts \"playwright typescript\"",
    "test:build": "npm run build && node dist/index.js \"playwright typescript\"",
    "debug": "ts-node src/index.ts --no-headless \"playwright typescript\"",
    "debug:build": "npm run build && node dist/index.js --no-headless \"playwright typescript\"",
    "link": "npm link",
    "clean": "node -e \"const fs = require('fs'); const path = require('path'); if (fs.existsSync('dist')) fs.rmSync('dist', { recursive: true, force: true });\"",
    "mcp": "ts-node src/mcp-server.ts",
    "mcp:build": "npm run build && node dist/mcp-server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/princehaku/playwright-search-mcp.git"
  },
  "homepage": "https://github.com/princehaku/playwright-search-mcp#readme",
  "bugs": {
    "url": "https://github.com/princehaku/playwright-search-mcp/issues"
  },
  "keywords": [
    "playwright",
    "search",
    "cli",
    "automation",
    "mcp",
    "claude",
    "search-engine"
  ],
  "author": "princehaku",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.9",
    "jsdom": "^26.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "commander": "^13.1.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.50.1",
    "playwright-extra": "^4.3.6",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
